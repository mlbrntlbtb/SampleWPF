<Window x:Class="SampleWPF.Lists.ListViewSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleWPF.Lists"
        mc:Ignorable="d"
        Title="ListViewSample" Height="200" Width="200">
    <Grid>
        <ListView Margin="10">
            <ListViewItem>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Pikachu.jpg" Height="15" Width="15" Margin="0,0,5,0"/>
                    <TextBlock>Pikachu</TextBlock>
                </StackPanel>
            </ListViewItem>
            <ListViewItem>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Squirtle.jpg" Height="15" Width="15" Margin="0,0,5,0"/>
                    <TextBlock>Squirtle</TextBlock>
                </StackPanel>
            </ListViewItem>
            <ListViewItem>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Charmander.jpg" Height="15" Width="15" Margin="0,0,5,0"/>
                    <TextBlock>Charmander</TextBlock>
                </StackPanel>
            </ListViewItem>
        </ListView>
    </Grid>
</Window>
