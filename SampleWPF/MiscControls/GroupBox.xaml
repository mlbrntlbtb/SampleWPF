<Window x:Class="SampleWPF.MiscControls.GroupBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleWPF.MiscControls"
        mc:Ignorable="d"
        Title="GroupBox" Height="220" Width="300">
    <Grid>
        <GroupBox Margin="10" Padding="10" BorderThickness="2">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/user.png" Height="16" Width="16" Margin="0,0,5,0"/>
                    <TextBlock FontWeight="Bold" Text="GroupBox Sample"/>
                </StackPanel>
            </GroupBox.Header>
            <StackPanel>
                <TextBlock Text="First Name: "/>
                <TextBox/>
                <TextBlock Text="Last Name: "/>
                <TextBox/>
                <Button Content="Add user" Margin="0,20"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
