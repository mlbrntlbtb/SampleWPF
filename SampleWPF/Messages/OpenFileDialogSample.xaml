<Window x:Class="SampleWPF.Messages.OpenFileDialogSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleWPF.Messages"
        mc:Ignorable="d"
        Title="OpenFileDialogSample" Height="300" Width="300">
    <DockPanel>
        <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top">
            <Button Name="btnOpenFile" Content="Open file" Click="btnOpenFile_Click"/>
        </WrapPanel>
        <TextBox Name="txtEditor"/> 
    </DockPanel>
</Window>
